<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/resultEdit"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            android:layout_margin="10dp"
            android:ems="15"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="40pt" />

        <LinearLayout
            android:id="@+id/ButtonRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn01"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_01"
                android:textSize="10pt" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="@string/button_02"
                android:textSize="10pt" />

            <Button
                android:id="@+id/btn03"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_03"
                android:textSize="10pt" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Add"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn04"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_04"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btn05"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_05"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btn06"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_06"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Minus"

                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn07"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_07"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btn08"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_08"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btn09"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_09"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Divide"

                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonRow04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Clear"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btn00"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_00"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Dot"

                android:textSize="10pt" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/button_Multiply"

                android:textSize="10pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnResult"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:baselineAligned="true"

                android:text="@string/button_Equals"
                android:textSize="10pt" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>